{
  "name": "@realtime-voting/server",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"vite-node src/index.ts --mode development --expose\"",
    "build": "tsc -b && vite build",
    "dev:build": "nodemon --watch \"dist\" --exec \"dist/index.es.js --mode development\"",
    "build:dev": "vite build --watch --mode development",
    "start": "node dist/index.es.js --mode production NODE_ENV=production",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "author": "awenn2015",
  "license": "ISC",
  "peerDependencies": {
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6",
    "zod": "^3.24.2"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@prisma/client": "^6.5.0",
    "@realtime-voting/shared": "1.0.0",
    "address": "^2.0.3",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "express": "^4.21.2",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.13",
    "@types/ts-reset": "npm:@total-typescript/ts-reset@^0.6.1",
    "@types/yargs": "^17.0.33",
    "graphql-tools": "^9.0.18",
    "nodemon": "^3.1.9",
    "prisma": "^6.5.0",
    "vite-node": "^3.0.9"
  },
  "resolve-path-alias": {
    "alias": {
      "@/*": "./src/*"
    }
  }
}
